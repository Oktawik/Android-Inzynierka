<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DziennikDodaj"
    android:orientation="vertical">

    <!-- Górny pasek -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/green"
        android:padding="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_pora_posilku"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pora posiłku"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <SearchView
        android:background="@drawable/rounded_bg"
        android:id="@+id/sv_dziennik_dodaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Dodaj produkt..."
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:iconifiedByDefault="false"
        />

    <TextView
        android:background="@drawable/rounded_bg"
        android:id="@+id/tv_dziennik_dodaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Produkty test..."
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:padding="10dp"
        android:background="@drawable/rounded_bg"
        android:id="@+id/rv_dziennik_dodaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>