<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Lewa strona z obrazkiem -->
        <FrameLayout
            android:id="@+id/imageSection"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Obrazek użytkownika -->

            <!-- Efekt ugryzienia - używamy custom shape -->
            <ImageView
                android:id="@+id/iv_wiecej_item_ikona"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="-30dp"/>

        </FrameLayout>

        <!-- Prawa strona z gradientem i tekstem -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_toEndOf="@id/imageSection"
            android:background="@drawable/gradient_background"
            android:paddingStart="24dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wiecej_item_nazwa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wyloguj się"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="0dp"/>

                <TextView
                    android:id="@+id/tv_wiecej_item_opis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:justificationMode="inter_word"
                    android:text="Przycisk wylogowuje z konta i\nprzenosi na ekran logowania"
                    android:textColor="#4A4A4A"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>