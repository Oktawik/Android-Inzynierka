<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DziennikDodajItem"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/btn_cofnij_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_pora_posilku_item"
            android:layout_alignBottom="@id/tv_data_item"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Cofnij"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tv_pora_posilku_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Pora posiÅ‚ku"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_data_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pora_posilku_item"
            android:layout_centerHorizontal="true"
            android:text="Data"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_nazwa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Produkt"
        />

    <LinearLayout
        android:background="@drawable/rounded_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_item_custom_ilosc"
            android:layout_width="0dp"
            android:layout_weight="1.5"  android:layout_height="wrap_content"
            android:text="100"  android:inputType="numberDecimal"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"/>

        <Spinner
            android:id="@+id/sp_item_custom_miara"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"  android:background="@drawable/spinner_background"
            android:minHeight="48dp"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/tv_item_custom_kcal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:text="0 kcal"
            android:textSize="16sp" android:padding="10dp"/>

        <ImageButton
            android:id="@+id/btn_item_custom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_plus"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>