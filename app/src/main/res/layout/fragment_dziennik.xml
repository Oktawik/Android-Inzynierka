<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sekcja Naglowka -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:text="Apka"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Sekcja Kalendarza -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:elevation="2dp"
            android:gravity="center_vertical">

            <!-- Kalendarz tygodniowy -->
            <LinearLayout
                android:id="@+id/weekDaysContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="7" />

            <!-- Przycisk do otwierania DatePicker -->
            <ImageButton
                android:id="@+id/calendarButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_kalendarz"
                android:contentDescription="Wybierz datę" />
        </LinearLayout>

        <!-- Sekcja Podsumowania -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="8dp"
            android:translationZ="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Podsumowanie"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:letterSpacing="0.02" />

            <!-- Wiersz kalorii do góry -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Zapotrzebowanie -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_blue"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:elevation="4dp"
                    android:translationZ="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CEL"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/caloriesNeeded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:alpha="0.8" />
                </LinearLayout>

                <!-- Zjedzone -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_green"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:elevation="4dp"
                    android:translationZ="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ZJEDZONE"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/caloriesConsumed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1200"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:alpha="0.8" />
                </LinearLayout>

                <!-- Spalone -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_orange"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginStart="6dp"
                    android:elevation="4dp"
                    android:translationZ="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPALONE"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/caloriesBurned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:alpha="0.8" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bilans kalorii -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:background="@drawable/gradient_dark"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="6dp"
                android:translationZ="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BILANS KALORII"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:letterSpacing="0.15"
                    android:textStyle="bold"
                    android:alpha="0.9" />

                <TextView
                    android:id="@+id/netCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1100"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pozostało"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:alpha="0.7"
                    android:letterSpacing="0.05" />
            </LinearLayout>

            <!-- Makroskładniki -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Białko -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/macro_card"
                    android:layout_marginEnd="4dp"
                    android:elevation="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BIAŁKA"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#E53E3E"
                        android:layout_marginBottom="8dp"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/proteinText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45g"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 150g"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/proteinProgress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="100"
                        android:progress="30"
                        android:progressTint="#E53E3E"
                        android:progressBackgroundTint="#EEEEEE" />
                </LinearLayout>

                <!-- Węglowodany -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/macro_card"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:elevation="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WĘGLOWODANY"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="#F56500"
                        android:layout_marginBottom="8dp"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/carbsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="180g"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 250g"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/carbsProgress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="100"
                        android:progress="72"
                        android:progressTint="#F56500"
                        android:progressBackgroundTint="#EEEEEE" />
                </LinearLayout>

                <!-- Tłuszcze -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/macro_card"
                    android:layout_marginStart="4dp"
                    android:elevation="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TŁUSZCZE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE"
                        android:layout_marginBottom="8dp"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/fatText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40g"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 67g"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/fatProgress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="100"
                        android:progress="60"
                        android:progressTint="#3182CE"
                        android:progressBackgroundTint="#EEEEEE" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Sekcja posiłków -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Odżywianie"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addFoodBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"
                    app:fabSize="mini"
                    app:backgroundTint="#4CAF50" />
            </LinearLayout>

            <!-- Śniadanie -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Śniadanie"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/breakfastContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#F5F5F5"
                android:minHeight="60dp"
                android:orientation="vertical"
                android:padding="12dp" />

            <!-- Lunch -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Lunch"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lunchContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#F5F5F5"
                android:minHeight="60dp"
                android:orientation="vertical"
                android:padding="12dp" />

            <!-- Obiad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Obiad"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/dinnerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#F5F5F5"
                android:minHeight="60dp"
                android:orientation="vertical"
                android:padding="12dp" />

            <!-- Kolacja -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Kolacja"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/supperContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:minHeight="60dp"
                android:orientation="vertical"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
