<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_meal_timings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_bg"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/pb_dish"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:max="100"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/circular_progress_drawable"/>

        <ImageView
            android:id="@+id/iv_dish_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_chatbot" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_dish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Śniadanie"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dish_calories_consumed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180 "
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_dish_calories_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / 400 kcal"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_dishes_ate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owsianka, Chleb żytni"
            android:textSize="12sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_dish_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_chatbot_edittext"
        android:padding="5dp"
        android:contentDescription="Dodaj posiłek"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_plus"
        android:tint="@color/green"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:id="@+id/btn_dish_add_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_chatbot_edittext"
        android:padding="12dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera"
        android:contentDescription="Dodaj posiłek"
        android:scaleType="centerCrop"
        android:tint="@color/green"/>
</LinearLayout>