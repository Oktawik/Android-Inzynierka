<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <rotate
            android:fromDegrees="225"
            android:toDegrees="225"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="ring"
                android:useLevel="false"
                android:thicknessRatio="15">

                <gradient
                    android:type="sweep"
                    android:useLevel="false"
                    android:startColor="#E0E0E0"  android:centerColor="#E0E0E0"
                    android:endColor="@android:color/transparent"  android:angle="0"
                    />
            </shape>
        </rotate>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="225"
            android:toDegrees="225"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="ring"
                android:useLevel="true"
                android:thicknessRatio="15">
                <solid android:color="#00FFC0" />  </shape>
        </rotate>
    </item>
</layer-list>